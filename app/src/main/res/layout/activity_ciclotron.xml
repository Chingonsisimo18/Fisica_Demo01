<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ciclotron">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pattern">

        <EditText
            android:id="@+id/velocidadC"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="200dp"
            android:background="@color/white"
            android:hint="Velocidad(m/s)"
            android:textAlignment="center"
            android:textColor="@color/azul3"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/radioC"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/EnegiaKC"
            android:layout_width="156dp"
            android:layout_height="54dp"
            android:layout_marginBottom="48dp"
            android:background="@color/white"
            android:hint="Enegia Cinetica"
            android:textAlignment="center"
            android:textColor="@color/azul3"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/buttonC"
            app:layout_constraintEnd_toEndOf="@+id/DeltaVC"
            app:layout_constraintHorizontal_bias="0.416"
            app:layout_constraintStart_toStartOf="@+id/campoMC" />

        <EditText
            android:id="@+id/DeltaVC"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@color/white"
            android:hint="Potencial (V)"
            android:textAlignment="center"
            android:textColor="@color/azul3"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/velocidadC"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/velocidadC"
            app:layout_constraintTop_toBottomOf="@+id/velocidadC" />

        <EditText
            android:id="@+id/periodoC"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="128dp"
            android:background="@color/white"
            android:hint="Periodo(s)"
            android:textAlignment="center"
            android:textColor="@color/azul3"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/velocidadC"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/velocidadC"
            app:layout_constraintTop_toBottomOf="@+id/velocidadC" />

        <EditText
            android:id="@+id/campoMC"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:hint="Campo Magnetico (T)"
            android:textAlignment="center"
            android:textColor="@color/azul3"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/radioC"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/radioC"
            app:layout_constraintTop_toBottomOf="@+id/radioC" />


        <EditText
            android:id="@+id/frecuenciaC"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="120dp"
            android:background="@color/white"
            android:hint="Frecuencia(Hz)"
            android:textAlignment="center"
            android:textColor="@color/azul3"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/radioC"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/radioC"
            app:layout_constraintTop_toBottomOf="@+id/radioC" />

        <EditText
            android:id="@+id/radioC"
            android:layout_width="97dp"
            android:layout_height="50dp"
            android:layout_marginTop="200dp"
            android:background="@color/white"
            android:hint="radio(m)"
            android:textAlignment="center"
            android:textColor="@color/azul3"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.27"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="572dp"
            android:backgroundTint="@color/azul4"
            android:text="Calcular!"
            android:textAlignment="center"
            android:textColor="@color/azul1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="201dp"
            android:layout_height="54dp"
            android:layout_marginTop="100dp"
            android:background="@color/azul1"
            android:backgroundTint="@color/azul3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>