<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manu_Acciones"
    android:background="@color/black">

    <Button
        android:id="@+id/calcular_angulo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:backgroundTint="@color/azul3"
        android:onClick="calcular_angulo_abrir"
        android:text=" Calcular °"
        android:textColor="@color/azul1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/ciclotron"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="476dp"
        android:backgroundTint="@color/azul3"
        android:onClick="calcular_ciclotron_abrir"
        android:text=" Calcular Ciclotron"
        android:textColor="@color/azul1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginTop="556dp"
        android:backgroundTint="@color/azul3"
        android:onClick="recursos_abrir"
        android:text="Recursos"
        android:textColor="@color/azul1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginTop="396dp"
        android:backgroundTint="@color/azul3"
        android:onClick="comparacion_ciclotron_abrir"
        android:text="Comparacion"
        android:textColor="@color/azul1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/calcular_vector2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="316dp"
        android:backgroundTint="@color/azul3"
        android:onClick="calcular_vector_abrir"
        android:text=" Calcular | ->|"
        android:textColor="@color/azul1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="255dp"
        android:layout_height="229dp"
        android:src="@drawable/atom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginBottom="28dp"
        android:text="     Calderón Ortega Santiago"
        android:textColor="@color/azul1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.695"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginBottom="56dp"
        android:text="Por: Gomez Mendez Alberto"
        android:textColor="@color/azul1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.695"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>